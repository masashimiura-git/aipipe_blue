    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // ROI Calculator elements
            const roiForm = document.getElementById('roi-form');
            const roiResultContainer = document.getElementById('roi-result-container');
            const roiResult = document.getElementById('roi-result');

            // Google Form submission elements
            const contactForm = document.getElementById('contact-form');
            const contactSuccessMessage = document.getElementById('contact-success-message');
            const typeOtherInput = document.getElementById('type-other');
            const otherInquiryText = document.getElementById('other-inquiry-text');
            const iframe = document.getElementById('google-form-iframe');

            // Modal elements
            const modalOverlay = document.getElementById('success-modal-overlay');
            const modalCloseButton = document.getElementById('modal-close-button');

            // --- Mobile Menu Logic ---
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
                
                const mobileLinks = mobileMenu.querySelectorAll('a');
                mobileLinks.forEach(link => {
                    link.addEventListener('click', () => {
                        mobileMenu.classList.add('hidden');
                    });
                });
            }

            // --- Scroll Animation Logic ---
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1 // 10% visible
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target); // Run once
                    }
                });
            }, observerOptions);

            const fadeUpElements = document.querySelectorAll('.fade-up');
            fadeUpElements.forEach(el => observer.observe(el));

            // --- Carousel Logic (Refactored for multiple instances) ---
            const initCarousel = (containerId, intervalTime = 5000) => {
                const container = document.getElementById(containerId);
                if (!container) return;

                const slides = container.querySelectorAll('.slide');
                const prevBtn = container.querySelector('.prev-slide-btn');
                const nextBtn = container.querySelector('.next-slide-btn');
                const indicatorsContainer = container.querySelector('.carousel-indicators');
                
                let currentSlide = 0;
                let intervalId = null;

                // Create indicators (blue style)
                if (indicatorsContainer) {
                    slides.forEach((_, index) => {
                        const dot = document.createElement('button');
                        dot.className = `w-3 h-3 rounded-full transition-colors duration-300 ${index === 0 ? 'bg-blue-600 scale-125' : 'bg-gray-300 hover:bg-gray-400'}`;
                        dot.ariaLabel = `Go to slide ${index + 1}`;
                        dot.addEventListener('click', () => {
                            goToSlide(index);
                            resetTimer();
                        });
                        indicatorsContainer.appendChild(dot);
                    });
                }

                const updateSlides = () => {
                    slides.forEach((slide, index) => {
                        if (index === currentSlide) {
                            slide.classList.remove('opacity-0', 'z-0');
                            slide.classList.add('opacity-100', 'z-10');
                        } else {
                            slide.classList.remove('opacity-100', 'z-0');
                            slide.classList.add('opacity-0', 'z-0');
                        }
                    });

                    if (indicatorsContainer) {
                        const dots = indicatorsContainer.querySelectorAll('button');
                        dots.forEach((dot, index) => {
                            if (index === currentSlide) {
                                dot.className = 'w-3 h-3 rounded-full transition-colors duration-300 bg-blue-600 scale-125';
                            } else {
                                dot.className = 'w-3 h-3 rounded-full transition-colors duration-300 bg-gray-300 hover:bg-gray-400';
                            }
                        });
                    }
                };

                const nextSlide = () => {
                    currentSlide = (currentSlide + 1) % slides.length;
                    updateSlides();
                };

                const prevSlide = () => {
                    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                    updateSlides();
                };

                const goToSlide = (index) => {
                    currentSlide = index;
                    updateSlides();
                };

                const startTimer = () => {
                    if (intervalId) clearInterval(intervalId);
                    intervalId = setInterval(nextSlide, intervalTime);
                };

                const stopTimer = () => {
                    if (intervalId) clearInterval(intervalId);
                };

                const resetTimer = () => {
                    stopTimer();
                    startTimer();
                };

                if (nextBtn) {
                    nextBtn.addEventListener('click', () => {
                        nextSlide();
                        resetTimer();
                    });
                }

                if (prevBtn) {
                    prevBtn.addEventListener('click', () => {
                        prevSlide();
                        resetTimer();
                    });
                }

                container.addEventListener('mouseenter', stopTimer);
                container.addEventListener('mouseleave', startTimer);
                container.addEventListener('touchstart', stopTimer);
                container.addEventListener('touchend', startTimer);

                startTimer();
            };

            initCarousel('carousel-container', 5000);
            initCarousel('hero-carousel-container', 4000);
            initCarousel('management-phone-carousel', 3500); 

            // --- ローカル計算によるROI分析（APIキー不要・高速版） ---
            const performLocalAnalysis = (currentTime, monthlyCounts, hourlyWage) => {
                const monthlyCountsInt = parseInt(monthlyCounts, 10);
                const currentTimeInt = parseInt(currentTime, 10);
                const hourlyWageInt = parseInt(hourlyWage, 10);

                const AI_TIME_PER_COUNT = 10; // AI導入後の1回あたりの秒数
                const ANNUAL_MONTHS = 12;

                // 計算ロジック
                // 従来の年間作業時間
                const currentTotalHours = (currentTimeInt / 3600) * monthlyCountsInt * ANNUAL_MONTHS;
                
                // AI導入後の年間作業時間
                const aiTotalHours = (AI_TIME_PER_COUNT / 3600) * monthlyCountsInt * ANNUAL_MONTHS;

                // 年間削減時間 = 従来 - AI
                const reductionTime = currentTotalHours - aiTotalHours;
                
                // 年間削減コスト = 年間削減時間 * 時給
                const reductionCost = reductionTime * hourlyWageInt;

                // 評価基準の判定
                let evaluationText = "";
                let headerBgClass = "bg-blue-600"; // デフォルト色（青）

                if (reductionCost >= 500000) {
                    evaluationText = "◎ 導入推奨";
                } else if (reductionCost > 0) {
                    // プラスであれば、額に関わらずメリットはあると判定
                    evaluationText = "〇 導入メリットあり";
                } else {
                    // 修正: マイナスの場合でもポジティブに「まずは無料デモで体験」と誘導
                    // 色もグレーにせず、デフォルトの青(bg-blue-600)を維持します
                    evaluationText = "まずは無料デモで体験";
                }

                // 数値のフォーマット（3桁区切り、整数化）
                const formattedCost = Math.round(reductionCost).toLocaleString();
                const formattedTime = Math.round(reductionTime).toLocaleString();
                const formattedCurrentHours = Math.round(currentTotalHours).toLocaleString();
                const formattedAiHours = Math.round(aiTotalHours).toLocaleString();

                // HTMLの生成
                return `
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-sm mx-auto font-sans border border-slate-200 transform transition hover:scale-[1.02] duration-300">
                        <div class="${headerBgClass} py-3 text-center text-white">
                            <!-- 修正: 診断結果 -> 分析結果 に統一 -->
                            <p class="text-[10px] font-bold opacity-80 mb-1 tracking-wider">分析結果</p>
                            <p class="text-2xl font-bold tracking-wider">${evaluationText}</p>
                        </div>
                        
                        <div class="px-6 py-5">
                            <div class="mb-4 text-center">
                                <!-- 年間削減できる人件費を表示 -->
                                <p class="text-[11px] font-bold text-gray-500 mb-1">年間削減できる人件費</p>
                                <p class="text-3xl font-bold text-blue-600 tracking-tight">約 ${formattedCost} 円</p>
                            </div>
                            
                            <div class="border-t border-gray-100 my-3"></div>

                            <!-- Before / After の時間比較 -->
                            <div class="space-y-2 bg-slate-50 p-3 rounded-lg border border-slate-100">
                                <div class="flex justify-between items-center text-sm">
                                    <span class="text-gray-500 font-medium text-xs">従来の作業時間</span>
                                    <span class="font-bold text-gray-600">${formattedCurrentHours} 時間/年</span>
                                </div>
                                <div class="flex justify-center text-gray-300 -my-1">
                                    <ion-icon name="arrow-down-outline"></ion-icon>
                                </div>
                                <div class="flex justify-between items-center text-sm">
                                    <!-- 文言修正: AIパイプカウンター導入 -->
                                    <span class="text-blue-600 font-bold text-xs">AIパイプカウンター導入</span>
                                    <span class="font-bold text-blue-600">${formattedAiHours} 時間/年</span>
                                </div>
                            </div>
                            
                            <div class="mt-3 text-center">
                                <p class="text-xs font-bold text-gray-400 mb-1">年間削減時間</p>
                                <p class="text-lg font-bold text-gray-700 tracking-tight">約 ${formattedTime} 時間のゆとり！</p>
                            </div>
                        </div>
                    </div>
                `;
            };

            // --- ROI Calculator Logic ---
            if (roiForm) {
                roiForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const currentTime = document.getElementById('current-time').value;
                    const monthlyCounts = document.getElementById('monthly-counts').value;
                    const hourlyWage = document.getElementById('hourly-wage').value;

                    if (!currentTime || !monthlyCounts || !hourlyWage) {
                        roiResultContainer.classList.remove('hidden');
                        roiResult.textContent = 'すべての項目を入力してください。';
                        roiResult.style.color = 'red';
                        return;
                    }
                    roiResult.style.color = 'inherit';

                    roiResultContainer.classList.remove('hidden');
                    // ローディング表示（一瞬ですが、UXとして残します）
                    roiResult.innerHTML = `
                        <div class="flex items-center justify-center p-4">
                            <div class="typing-indicator">
                                <span></span><span></span><span></span>
                            </div>
                            <!-- "AIが" を削除 -->
                            <span class="ml-3 text-gray-500">分析中です...</span>
                        </div>
                    `;

                    // 少しだけウェイトを入れて計算感を出す（即時表示でも良いが演出として）
                    setTimeout(() => {
                        try {
                            const analysisHTML = performLocalAnalysis(currentTime, monthlyCounts, hourlyWage);
                            roiResult.innerHTML = analysisHTML;
                        } catch (error) {
                            console.error("Error in ROI analysis:", error);
                            roiResult.textContent = '申し訳ありません、分析中にエラーが発生しました。';
                        }
                    }, 800);
                });
            }

            // --- Contact Form Logic ---
            const contactFormRadioButtons = document.querySelectorAll('input[name="entry.1660827808"]');
            const otherInput = document.getElementById('type-other');
            const otherText = document.getElementById('other-inquiry-text');

            if (contactFormRadioButtons.length > 0 && otherInput && otherText) {
                contactFormRadioButtons.forEach(radio => {
                    radio.addEventListener('change', () => {
                         if (otherInput.checked) {
                            otherText.classList.remove('hidden');
                            otherText.setAttribute('required', 'required');
                         } else {
                            otherText.classList.add('hidden');
                            otherText.removeAttribute('required');
                         }
                    });
                });
            }

            if (contactForm && iframe && modalOverlay && modalCloseButton) {
                const showModal = () => {
                    modalOverlay.classList.add('active');
                };

                const hideModal = () => {
                    modalOverlay.classList.remove('active');
                    contactForm.classList.remove('hidden');
                    contactSuccessMessage.classList.add('hidden');
                    contactForm.reset();
                };

                modalCloseButton.addEventListener('click', hideModal);
                modalOverlay.addEventListener('click', (e) => {
                    if (e.target.id === 'success-modal-overlay') {
                        hideModal();
                    }
                });

                contactForm.addEventListener('submit', (e) => {
                    const submitButton = document.getElementById('contact-submit-button');
                    submitButton.disabled = true;
                    submitButton.textContent = '送信中...';
                    
                    contactForm.classList.add('hidden');
                    contactSuccessMessage.classList.remove('hidden');

                    setTimeout(() => {
                        showModal();
                        submitButton.disabled = false;
                        submitButton.innerHTML = '<span>送信する</span><ion-icon name="paper-plane"></ion-icon>';
                    }, 1500);
                });
            }
        });

        function openImageModal(imageSrc) {
            const modal = document.getElementById('image-modal-overlay');
            const expandedImage = document.getElementById('expanded-image');
            if (modal && expandedImage) {
                expandedImage.src = imageSrc;
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeImageModal() {
            const modal = document.getElementById('image-modal-overlay');
            if (modal) {
                modal.classList.remove('active');
                document.body.style.overflow = '';
            }
        }
    </script>
</body>
</html>
